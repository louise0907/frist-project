    <script>
        $(document).ready(function () {
            $('.delete-product').on('click', function (e) {
                e.preventDefault();
                var productId = $(this).data('id');
                var row = $(this).closest('.single-item');

                $.ajax({
                    url: '@Url.Action("deleleproduct", "seller")',
                    type: 'POST',
                    data: { id: productId },
                    success: function (response) {
                        if (response.success) {
                            toastr.success(response.message);
                            row.remove();
                        } else {
                            toastr.error(response.message);
                        }
                    },
                    error: function () {
                        toastr.error('An error occurred');
                    }
                });
            });
        });
        function updateButtonVisibility(id, status) {
            var $deactiveButton = $('.productDeactive[data-id="' + id + '"]');
            var $activeButton = $('.productActive[data-id="' + id + '"]');
            var $statusCell = $('.productStatus[data-id="' + id + '"]');

            if (status === 'Active') {
                $deactiveButton.show();
                $activeButton.hide();
                $statusCell.text('Active');
            } else {
                $deactiveButton.hide();
                $activeButton.show();
                $statusCell.text('Inactive');
            }
        }

        $('.productDeactive').on('click', function (e) {
            e.preventDefault();
            var id = $(this).data('id');

            $.ajax({
                url: '@Url.Action("productDeactive", "seller")',
                type: 'POST',
                data: { id: id },
                success: function (response) {
                    if (response.success) {
                        updateButtonVisibility(id, 'Inactive');
                    }
                }
            });
        });

        $('.productActive').on('click', function (e) {
            e.preventDefault();
            var id = $(this).data('id');

            $.ajax({
                url: '@Url.Action("productactive", "admin")',
                type: 'POST',
                data: { id: id },
                success: function (response) {
                    if (response.success) {
                        updateButtonVisibility(id, 'Active');
                    }
                }
            });
        });

        // Initial UI setup
        $('.productDeactive, .productActive').each(function () {
            var id = $(this).data('id');

            $.ajax({
                url: '@Url.Action("GetProductStatus", "seller")',
                type: 'GET',
                data: { id: id },
                success: function (response) {
                    updateButtonVisibility(id, response.status);
                }
            });
        });
                
    </script>
