 @model IEnumerable<Ecomwed.Models.product.products>

@{
    ViewData["Title"] = "productlist";
    Layout = "adminlayout";
}

<div class="nxl-content">
<!-- [ page-header ] start -->
<div class="page-header">
    <div class="page-header-left d-flex align-items-center">
        <div class="page-header-title">
            <h5 class="m-b-10">Product</h5>
        </div>
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item">Create</li>
        </ul>
    </div>
    <div class="page-header-right ms-auto">
        <div class="page-header-right-items">
            <div class="d-flex d-md-none">
                <a href="javascript:void(0)" class="page-header-right-close-toggle">
                    <i class="feather-arrow-left me-2"></i>
                    <span>Back</span>
                </a>
            </div>
            <div class="d-flex align-items-center gap-2 page-header-right-items-wrapper">
                <a href="javascript:void(0);" class="btn btn-light-brand successAlertMessage">
                    <i class="feather-layers me-2"></i>
                    <span>Save as Draft</span>
                </a>
                <a href="javascript:void(0);" class="btn btn-primary successAlertMessage">
                    <i class="feather-user-plus me-2"></i>
                    <span>Create Customer</span>
                </a>
            </div>
        </div>
        <div class="d-md-none d-flex align-items-center">
            <a href="javascript:void(0)" class="page-header-right-open-toggle">
                <i class="feather-align-right fs-20"></i>
            </a>
        </div>
    </div>
</div>
<!-- [ page-header ] end -->
<!-- [ Main Content ] start -->

    <div class="row">
        <div class="col-lg-12">
            <div class="card border-top-0">
                <div class="card-header p-0">
                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs flex-wrap w-100 text-center customers-nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item flex-fill border-top" role="presentation">
                            <a href="javascript:void(0);" class="nav-link" data-bs-toggle="tab" data-bs-target="#connectionTab" role="tab">Product</a>
                        </li>
                    </ul>
                </div>
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="profileTab" role="tabpanel">
                    </div>
                    <div class="tab-pane fade" id="connectionTab" role="tabpanel">
                        <div class="card-body development-connections">
                            <table class="table table-hover" id="customerList">
                                <thead>
                                    <tr>

                                        <th>ID</th>
                                        <th>Image</th>
                                        <th>Product Name </th>
                                        <th>Normal Price</th>
                                        <th>Afther Discount</th>
                                        <th>Discount</th>
                                        <th>Stock</th>
                                        <th>Status</th>
                                     

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="single-item">

                                            <td>
                                                <a class="hstack gap-3">

                                                    <div>
                                                        <span class="text-truncate-1-line">@item.Id</span>
                                                    </div>
                                                </a>
                                            </td>
                                            <td>
                                                <div class="hstack justify-content-between p-4 mb-3 border border-dashed border-gray-3 rounded-1">
                                                    <div class="hstack me-4">
                                                        <div class="wd-40">
                                                            <img src="/image/@item.image" class="img-fluid" alt="">
                                                        </div>
                                                    </div>
                                                    <div class="form-check form-switch form-switch-sm">
                                                        <label class="form-check-label fw-500 text-dark c-pointer" for="formSwitchGDrive"></label>

                                                    </div>
                                                </div>
                                            </td>
                                            <td>@item.productname</td>
                                            <td>@item.normalprice</td>
                                            <td>@item.afterdiscountprice</td>
                                            <td>@item.discount</td>
                                            <td>@item.stock</td>

                                            <td class="productStatus" data-id="@item.Id">@item.status</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



