@{
    ViewData["Title"] = "chart";
    Layout = "adminlayout";
}




<!--! ================================================================ !-->
<!--! [Start] Main Content !-->
<!--! ================================================================ !-->

<div class="nxl-content">
    <!-- [ page-header ] start -->
    <div class="page-header">
        <div class="page-header-left d-flex align-items-center">
            <div class="page-header-title">
                <h5 class="m-b-10">Widgets</h5>
            </div>
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item">Charts</li>
            </ul>
        </div>
        <div class="page-header-right ms-auto">
            <div class="page-header-right-items">
                <div class="d-flex d-md-none">
                    <a href="javascript:void(0)" class="page-header-right-close-toggle">
                        <i class="feather-arrow-left me-2"></i>
                        <span>Back</span>
                    </a>
                </div>
                <div class="d-flex align-items-center gap-2 page-header-right-items-wrapper">
                 
                </div>
            </div>
            <div class="d-md-none d-flex align-items-center">
                <a href="javascript:void(0)" class="page-header-right-open-toggle">
                    <i class="feather-align-right fs-20"></i>
                </a>
            </div>
        </div>
    </div>
    <!-- [ page-header ] end -->
    <!-- [ Main Content ] start -->

    <div class="row">
        <!-- [Mini Card] start -->
        <div class="col-xxl-3 col-md-6">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="text-start">
                        <h4 class="text-reset">@Model.TotalSales</h4>
                        <p class="text-reset m-0">Total Sales</p>
                    </div>
                </div>
                <div id="total-sales-color-graph"></div>
            </div>
        </div>
        <div class="col-xxl-3 col-md-6">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <div class="text-start">
                        <h4 class="text-reset">@Model.TotalComments</h4>
                        <p class="text-reset m-0">Total Comments</p>
                    </div>
                </div>
                <div id="total-comment-color-graph"></div>
            </div>
        </div>
        <div class="col-xxl-3 col-md-6">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="text-start">
                        <h4 class="text-reset">@Model.TotalCustomers</h4>
                        <p class="text-reset m-0">Total Customers</p>
                    </div>
                </div>
                <div id="total-income-color-graph"></div>
            </div>
        </div>
        <div class="col-xxl-3 col-md-6">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="text-start">
                        <h4 class="text-reset">@Model.TotalSellers</h4>
                        <p class="text-reset m-0">Total Sellers</p>
                    </div>
                </div>
                <div id="total-visitors-color-graph"></div>
            </div>
        </div>
        <!-- [Mini Card] end -->
    </div>
        <!-- [Payment Records] start -->
      
        <!-- [Payment Records] end -->
      
    
    <div class="col-xxl-12">
        <div class="card stretch stretch-full">
            <div class="card-header">
                <h5 class="card-title">Earning & Expense</h5>
            </div>
            <div class="card-body custom-card-action">
                <div class="row g-0">
                    <div class="col-xl-8">
                        <div id="earning-expense-area-chart"></div>
                    </div>
                    <div class="col-xl-4">
                        <div class="row">
                            <div class="col-xl-12 col-md-6">
                                <div class="p-4">
                                    <div class="d-flex align-items-start justify-content-between">
                                        <div>
                                            <div class="fs-11 fw-medium text-muted text-uppercase">Earnings Today</div>
                                            <div class="fs-20 fw-bolder text-primary">RM @Model.EarningsToday.ToString("F2")</div>
                                        </div>
                                        <div class="dropdown">
                                            <a href="javascript:void(0);" class="btn btn-sm btn-light-brand dropdown-toggle" data-bs-toggle="dropdown">@Model.DateRange</a>
                                            <div class="dropdown-menu dropdown-menu-end">
                                                @for (var i = 0; i < 5; i++)
                                                {
                                                    var date = DateTime.Today.AddDays(-i).ToString("yyyy-MM-dd");
                                                    <a href="@Url.Action("Chart", new { dateRange = date })" class="dropdown-item">@date</a>
                                                }
                                                <div class="dropdown-divider"></div>
                                                <a href="@Url.Action("Chart", new { dateRange = "All Times" })" class="dropdown-item">All Times</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="fs-12 text-muted">Earnings are @(Model.EarningsToday > Model.EarningsYesterday ? "higher" : "lower") than yesterday.</div>
                                    <div>
                                        <div id="earnings-area-chart"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>

    
</div>
<!-- [ Main Content ] end -->
