    <script>
        $(document).ready(function () {
            function updateButtonVisibility(id, status) {
                var $deactiveButton = $('.customerDeactive[data-id="' + id + '"]');
                var $activeButton = $('.customerActive[data-id="' + id + '"]');
                var $statusCell = $('.customerStatus[data-id="' + id + '"]');

                if (status === 'Active') {
                    $deactiveButton.show();
                    $activeButton.hide();
                    $statusCell.text('Active');
                } else {
                    $deactiveButton.hide();
                    $activeButton.show();
                    $statusCell.text('Inactive');
                }
            }

            $('.customerDeactive').on('click', function (e) {
                e.preventDefault();
                var id = $(this).data('id');

                $.ajax({
                    url: '@Url.Action("CustomerDeactive", "admin")',
                    type: 'POST',
                    data: { id: id },
                    success: function (response) {
                        if (response.success) {
                            updateButtonVisibility(id, 'Inactive');
                        }
                    }
                });
            });

            $('.customerActive').on('click', function (e) {
                e.preventDefault();
                var id = $(this).data('id');

                $.ajax({
                    url: '@Url.Action("CustomerActive", "admin")',
                    type: 'POST',
                    data: { id: id },
                    success: function (response) {
                        if (response.success) {
                            updateButtonVisibility(id, 'Active');
                        }
                    }
                });
            });

            // Initial UI setup
            $('.customerDeactive, .customerActive').each(function () {
                var id = $(this).data('id');

                $.ajax({
                    url: '@Url.Action("GetCustomerStatus", "admin")',
                    type: 'GET',
                    data: { id: id },
                    success: function (response) {
                        updateButtonVisibility(id, response.status);
                    }
                });
            });
        });
    </script>
